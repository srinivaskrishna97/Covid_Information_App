<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnAddNews"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:text="Add News"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_6ssp"
        android:layout_margin="@dimen/_6ssp"
        android:drawableLeft="@drawable/ic_baseline_add_circle_outline_24"
        android:drawablePadding="@dimen/_6ssp"
        android:background="@drawable/btn_design_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_28ssp"/>


    <ListView
        android:layout_below="@+id/btnAddNews"
        android:id="@+id/list_view"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</RelativeLayout>