<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_vc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_2sdp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#34FDFBFB"
        app:cardMaxElevation="@dimen/_6sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"

        android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_1ssp"
                android:fontFamily="@font/graphikmedium"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp" />



            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_1ssp"
                android:layout_weight="1"
                android:fontFamily="@font/graphikmedium"
                android:textColor="#000"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/llvc"
                android:layout_below="@+id/tvTitle"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_1ssp"
                    android:fontFamily="@font/graphikmedium"
                    android:textColor="#000"
                    android:textSize="@dimen/_11sdp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_below="@+id/tvTitle"
                    android:layout_weight="1"
                    android:src="@drawable/vc"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="centerInside"
                    android:gravity="end"
                    android:text="Aligned right" />


            </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llvc"
            android:orientation="horizontal">


            <Button
                android:layout_below="@+id/llvc"
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/_100ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="#4A2A6F"
                android:gravity="center"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_10ssp" />


            <Button
                android:layout_below="@+id/llvc"
                android:id="@+id/btnDelete"
                android:layout_width="@dimen/_100ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="#4A2A6F"
                android:gravity="center"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>



    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>