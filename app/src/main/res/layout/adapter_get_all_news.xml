<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="@dimen/_6sdp">

        <RelativeLayout
            android:padding="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCovidLatestUpdate"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="#000"
                android:fontFamily="@font/graphikmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/ll"
                android:layout_below="@+id/tvCovidLatestUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCovidDesc"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:maxLines="2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/graphikregular"
                    android:textColor="#000"
                    />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="centerInside"
                    android:gravity="end"
                    android:text="Aligned right" />
            </LinearLayout>



            <Button
                android:id="@+id/btn_detailsews"
                android:text="Detail News"
                android:textColor="#ffffff"
                android:layout_below="@+id/ll"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textAllCaps="false"
                android:background="@drawable/button_design"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="40dp" />






        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>