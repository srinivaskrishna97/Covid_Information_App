<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_side_inner_page"
    android:orientation="vertical"
    tools:context=".activities.SelfAssementOneActivity">


    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/graphikmedium"
            android:text="Self Assessment"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/graphiksemibold"
        android:padding="@dimen/_6ssp"
        android:text="Self Assessment Guidelines"
        android:textColor="#000"
        android:textSize="@dimen/_16sdp" />




    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_13ssp"
        android:fontFamily="@font/graphikmedium"
        android:text="How old are you?"
        android:textColor="#000"
        android:textSize="@dimen/_16sdp" />




    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_13ssp"
        android:fontFamily="@font/graphikregular"
        android:text="We collect this anonymous information to better understand how the virus affects different age groups."
        android:textColor="#000"
        android:textSize="@dimen/_14sdp" />



    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/graphikmedium"
        android:padding="@dimen/_6ssp"
        android:text="Screening a child younger than 18? "
        android:textColor="#000"
        android:textSize="@dimen/_16sdp" />





    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_13ssp"
        android:fontFamily="@font/graphikregular"
        android:text="Use the COVID-19 school screening to get recommendations that are more specific for children."
        android:textColor="#000"
        android:textSize="@dimen/_14sdp" />





    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_13ssp"
        android:layout_marginTop="@dimen/_15ssp"
        android:fontFamily="@font/graphikregular"
        android:text="@string/ages"
        android:textColor="#000"
        android:textSize="@dimen/_14sdp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50ssp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnYes"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35ssp"
            android:layout_marginRight="@dimen/_6ssp"
            android:background="#4A2A6F"
            android:text="Yes"
            android:textColor="#fff"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35ssp"
            android:background="#4A2A6F"
            android:text="No"
            android:textColor="#fff"
            android:textStyle="bold" />


    </LinearLayout>









</LinearLayout>