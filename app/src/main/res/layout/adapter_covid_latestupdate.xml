<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardMaxElevation="@dimen/_6sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_6sdp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/graphikmedium"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvName"
                android:layout_marginLeft="@dimen/_13sdp"
                android:fontFamily="@font/graphikregular"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/tvAdddressone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLocation"
                android:layout_marginLeft="@dimen/_13sdp"
                android:fontFamily="@font/graphikregular"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/tvAdddresstwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdddressone"
                android:layout_marginLeft="@dimen/_13sdp"
                android:fontFamily="@font/graphikregular"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdddresstwo"
                android:layout_marginLeft="@dimen/_13sdp"
                android:fontFamily="@font/graphikregular"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/tvLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPhone"
                android:layout_marginLeft="@dimen/_13sdp"
                android:fontFamily="@font/graphikregular"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />


            <TextView
                android:id="@+id/tvLang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLat"
                android:layout_marginLeft="@dimen/_13sdp"
                android:fontFamily="@font/graphikregular"
                android:textColor="#000"
                android:textSize="@dimen/_13ssp" />


            <Button
                android:id="@+id/btnEdit"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="40dp"
                android:layout_below="@+id/tvLang"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:background="@drawable/button_design"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="#ffffff" />


            <Button
                android:id="@+id/btnDelete"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="40dp"
                android:layout_below="@+id/tvLang"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/_5ssp"
                android:layout_marginTop="@dimen/_8ssp"
                android:background="@drawable/button_design"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="#ffffff" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>