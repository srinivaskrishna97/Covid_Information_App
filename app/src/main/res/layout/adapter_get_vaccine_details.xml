<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    -

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"
        android:orientation="horizontal">


        -

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_search_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardMaxElevation="@dimen/_6sdp">


            -

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_1ssp"
                    android:fontFamily="@font/graphikmedium"
                    android:textColor="#000"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_1ssp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/graphikmedium"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp" />


                -

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTitle"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_1ssp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/graphikmedium"
                        android:maxLines="4"
                        android:textColor="#000"
                        android:textSize="@dimen/_11sdp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="200dp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_below="@+id/tvTitle"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:scaleType="centerInside"
                        android:src="@drawable/vc"
                        android:text="Aligned right" />

                </LinearLayout>


                -

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp">

                    <Button
                        android:id="@+id/btndetails"
                        android:layout_width="@dimen/_105sdp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/ll"
                        android:layout_weight="1"
                        android:background="#4A2A6F"
                        android:text="Details"
                        android:textAllCaps="false"
                        android:textColor="#ffffff" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</LinearLayout>